<?xml version="1.0"?>
<launch>
    <arg name="ns" default="target_0"/>
    <arg name="model" default="$(find irobot_create_description)/urdf/create.urdf.xacro"/>
    <arg name="x" default="0"/>
    <arg name="y" default="0"/>
    <arg name="z" default="0.01"/>
    <arg name="R" default="0"/>
    <arg name="P" default="0"/>
    <arg name="Y" default="0"/>
    <!-- send the robot XML to param server -->
    <param name="$(arg ns)/urdf" command="$(find xacro)/xacro '$(arg model)' --inorder" />

    <!-- push robot_description to factory and spawn robot in gazebo -->
    <node name="$(arg ns)_spawn" pkg="gazebo_ros" type="spawn_model"
        args="-param $(arg ns)/urdf
        -urdf
        -x '$(arg x)'
        -y '$(arg y)'
        -z '$(arg z)'
        -R '$(arg R)'
        -P '$(arg P)'
        -Y '$(arg Y)'
        -model create"
        respawn="false" output="screen"/>

    <!-- start robot state publisher -->
    <group ns="$(arg ns)">
        <node pkg="robot_state_publisher" type="robot_state_publisher" name="state" output="screen" >
            <param name="publish_frequency" type="double" value="50.0" />
            <param name="tf_prefix" type="string" value="$(arg ns)" />
        </node>

        <node name="gt_tf" pkg="message_to_tf" type="message_to_tf" output="screen">
            <param name="odometry_topic" value="ground_truth/state" />
            <param name="frame_id" value="nav" />
        </node>
    </group>

</launch>
