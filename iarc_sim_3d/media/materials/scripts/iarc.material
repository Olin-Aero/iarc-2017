material IARC/Floor1
{
    receive_shadows on
    lighting on
    technique
    {
        pass
        {
            ambient 0.5 0.5 0.5 1.0
            diffuse 0.5 0.5 0.5 1.0
            specular 0.2 0.2 0.2 1.0 12.5
            texture_unit
            {
                texture floor1.jpg
                    filtering anisotropic
                    max_anisotropy 16
                    scale 0.1 0.1
            }
        }
    }
}

